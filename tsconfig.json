{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist/",
    "typeRoots": ["./node_modules/@types", "./plugins/*/"],
    "types": ["node"],

    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src", "./plugins"]
}
